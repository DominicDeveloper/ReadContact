<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_margin="10dp"
    android:padding="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/itembottom_ct_image"
        android:src="@drawable/ic_baseline_perm_contact_calendar_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/itembottom_ct_number"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/itembottom_ct_image"
        android:text="Phone number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:id="@+id/itembottom_ct_call"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        app:layout_constraintRight_toLeftOf="@id/itembottom_ct_message"
        app:layout_constraintTop_toBottomOf="@id/itembottom_ct_number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp">
        <ImageView
            android:padding="13dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_call_24"/>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:id="@+id/itembottom_ct_message"
        app:cardCornerRadius="25dp"
        app:layout_constraintTop_toBottomOf="@id/itembottom_ct_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/itembottom_ct_call"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageView
            android:padding="13dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_message_24"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>